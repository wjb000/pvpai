# Platform Fee Wallet (where fees are sent)
PLATFORM_FEE_WALLET=0x...

# Security
JWT_SECRET=your_jwt_secret_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=https://...
DATADOG_API_KEY=...

# Game Configuration
MIN_PLAYERS=2
